<div class="panel panel-primary">
  <div class="panel-heading">Maintenance of bike <%= @bike.name %></div>
  <div class="panel-body">
    <div class="col-xs-12 maintenance-container">
      <%= link_to "Add New Maintenance", new_bike_maintenance_path, class: "btn btn-default" %>
      <table class="table table-striped">
        <tbody>
          <tr>
            <th>
              Maintenance date:
            </th>
            <% @bike_maintenances.each do |maintenance| %>
              <td><%= maintenance.date %></td>
            <% end %>
            <td>
              kilometers since last maintenance:
            </td>
          </tr>
          <tr>
            <th>
              Odometer:
            </th>
            <% @bike_maintenances.each do |maintenance| %>
              <td><%= maintenance.odometer %></td>
            <% end %>
          </tr>
          <tr>
            <th>
              Costs:
            </th>
            <% @bike_maintenances.each do |maintenance| %>
              <td><%= maintenance.costs %></td>
            <% end %>
          </tr>
          <tr>
            <th>
              Oil change:
            </th>
            <% @bike_maintenances.each do |maintenance| %>
              <td><%= maintenance.oil %></td>
            <% end %>
            <td>
              <%= @km_ago[:oil] %>
            </td>
          </tr>
          <tr>
            <th>
              Sparkplugs replaced:
            </th>
            <% @bike_maintenances.each do |maintenance| %>
              <td><%= maintenance.sparkplugs %></td>
            <% end %>
            <td>
              <%= @km_ago[:sparkplugs] %>
            </td>
          </tr>
          <tr>
            <th>
              Airfilter replaced:
            </th>
            <% @bike_maintenances.each do |maintenance| %>
              <td><%= maintenance.airfilter %></td>
            <% end %>
            <td>
              <%= @km_ago[:airfilter] %>
            </td>
          </tr>
          <tr>
            <th>
              Oilfilter replaced:
            </th>
            <% @bike_maintenances.each do |maintenance| %>
              <td><%= maintenance.oilfilter %></td>
            <% end %>
            <td>
              <%= @km_ago[:oilfilter] %>
            </td>
          </tr>
          <tr>
            <th>
              Coolingfluid replaced:
            </th>
            <% @bike_maintenances.each do |maintenance| %>
              <td><%= maintenance.coolingfluid %></td>
            <% end %>
            <td>
              <%= @km_ago[:coolingfluid] %>
            </td>
          </tr>
          <tr>
            <th>
              Chain replaced:
            </th>
            <% @bike_maintenances.each do |maintenance| %>
              <td><%= maintenance.chain %></td>
            <% end %>
            <td>
              <%= @km_ago[:chain] %>
            </td>
          </tr>
          <tr>
            <th>
              Front break replaced:
            </th>
            <% @bike_maintenances.each do |maintenance| %>
              <td><%= maintenance.break_front %></td>
            <% end %>
            <td>
              <%= @km_ago[:break_front] %>
            </td>
          </tr>
          <tr>
            <th>
              Rear brake replaced:
            </th>
            <% @bike_maintenances.each do |maintenance| %>
              <td><%= maintenance.break_back %></td>
            <% end %>
            <td>
              <%= @km_ago[:break_back] %>
            </td>
          </tr>
          <tr>
            <th>
              Brake fluid replaced:
            </th>
            <% @bike_maintenances.each do |maintenance| %>
              <td><%= maintenance.breakfluid %></td>
            <% end %>
            <td>
              <%= @km_ago[:breakfluid] %>
            </td>
          </tr>
          <tr>
            <th>
              New tyres:
            </th>
            <% @bike_maintenances.each do |maintenance| %>
              <td><%= maintenance.tyres %></td>
            <% end %>
            <td>
              <%= @km_ago[:tyres] %>
            </td>
          </tr>
          <tr>
            <th></th>
            <% @bike_maintenances.each do |maintenance| %>
              <td>
                <%= link_to "EDIT", edit_bike_maintenance_path(@bike, maintenance), class: "btn btn-default" %>
                <%= link_to "DELETE", bike_maintenance_path(@bike, maintenance), method: :delete, data: { confirm: "Are you sure you want to delelte this maintenance?" }, class: "btn btn-default" %>
              </td>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%= link_to "Back to bikes", bikes_path, class: "btn btn-default" %>
